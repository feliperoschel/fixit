
<% @paintings.each do |painting| %>
  <div class="card-index-painting" style="width: 18rem;">
    <img class="card-img-top" src="<%= image_url painting.photo %>" alt="Card image cap">
    <div class="card-body">

      <div class="d-flex justify-content-between">
        <h5 class="card-title"><%= painting.title %></h5>
        <p class="card-price">$<%= painting.price %></p>
      </div>

      <div>
        <p class="card-text"><%= painting.description %></p>
      </div>

      <div class="x">
        <% if (painting.user != current_user) %>
          <%= link_to "Book", new_painting_booking_path(painting), class: "btn btn-success" %>
        <% else %>
          <%= link_to "Edit", edit_painting_path(painting), class: "btn btn-success" %>
        <% end %>
        <%= link_to "Details", painting_path(painting), class: "btn btn-outline-success" %></div>
      </div>

  </div>
<% end %>
