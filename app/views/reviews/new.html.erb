<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>
<% if policy(@review).create? %>
  <h1>Review</h1>
  <%= simple_form_for [@painting, @review] do |f| %>
    <%= f.input :date%>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Review", class: "btn btn-primary" %>
  <% end %>
<% end %>