<div class="painting-new">
  <div class="row justify-content-center">
    <div class="col-8">
      <% if policy(@painting).create? %>
        <h1>Painting</h1>
          <%= simple_form_for [@painting] do |f| %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :category %>
          <%= f.input :location %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Create", class: "btn btn-primary" %>
        <% end %>
      <% end %>
   </div>
  </div>
</div>