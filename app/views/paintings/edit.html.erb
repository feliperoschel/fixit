<% if policy(@painting).update? %>
  <h1>Painting</h1>
  <%= simple_form_for [@painting] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :category %>
    <%= f.input :location %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Update", class: "btn btn-success mb-5" %>
  <% end %>
<% end %>
